<script type="text/javascript">
  	var productOptions = [];
	{% for option in product.options %}
  		productOptions.push("{{ option | escape }}");
	{% endfor %}
    //console.log("productOptions: "+productOptions[0]);

	var productOptionNames = [];
	var productOptionValues = [];
  	productOptionValues[1] = [];
	productOptionValues[2] = [];
	productOptionValues[3] = [];
	//productOptionValues.push({ {{ product_option.name[0] }}:'{{ value }}' });

	{% for product_option in product.options_with_values %}
  		productOptionNames.push("{{ product_option.name | escape }}");
			{% for value in product_option.values %}
				productOptionValues[{{ forloop.parentloop.index }}].push("{{ value | escape }}");
			{% endfor %}
	{% endfor %}
  	//console.log("productOptionNames: "+productOptionNames);
  	//console.log("productOptionValues[1]: "+productOptionValues[1]);
  //console.log("productOptionValues[2]: "+productOptionValues[2]);
  //console.log("productOptionValues[3]: "+productOptionValues[3]);
  
  	//build a list of valid variants
    var variant = [];
    {% for variant in product.variants %}
  		variant.push({id:{{ variant.id }}, option1:"{{ variant.option1 | escape }}", option2:"{{ variant.option2 | escape }}", option3:"{{ variant.option3 | escape }}", stock:'{{ variant.inventory_quantity }}'});
    {% endfor %}
	
  	function selectValidOption(select) {
      	return select;
  	}

    function hideSelectors() {
        console.log("options[" + productOptions[0] + "]");
        const collection = document.getElementsByName("options[" + productOptions[0] + "]");
        result = selectValidOption(collection[0]);
        console.log(result.value);
    }
  	this.addEventListener('change', this.hideSelectors);
	hideSelectors();
</script>