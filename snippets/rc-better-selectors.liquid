<script type="text/javascript">
  	var productOptions = [];
	{% for option in product.options %}
  		productOptions.push("{{ option }}");
	{% endfor %}
    //console.log("productOptions: "+productOptions[0]);

	var productOptionNames = [];
	var productOptionValues = [];
  	productOptionValues[1] = [];
	productOptionValues[2] = [];
	productOptionValues[3] = [];
	//productOptionValues.push({ {{ product_option.name[0] }}:'{{ value }}' });

	{% for product_option in product.options_with_values %}
  		productOptionNames.push("{{ product_option.name }}");
			{% for value in product_option.values %}
				productOptionValues[{{ forloop.parentloop.index }}].push("{{ value }}");
			{% endfor %}
	{% endfor %}
  	console.log("productOptionNames: "+productOptionNames);
  	console.log("productOptionValues: "+productOptionValues);
  
  	//build a list of valid variants
    var variant = [];
    {% for variant in product.variants %}
  		variant.push({id:{{ variant.id }}, option1:'{{ variant.option1 }}', option2:'{{ variant.option2 }}', option3:'{{ variant.option3 }}', stock:'{{ variant.inventory_quantity }}'});
    {% endfor %}
	
  	function selectValidOption(select) {
      	return select;
  	}

    function hideSelectors() {
        console.log("options[" + productOptions[0] + "]");
        const collection = document.getElementsByName("options[" + productOptions[0] + "]");
        result = selectValidOption(collection[0]);
        console.log(result);
    }
  	this.addEventListener('change', this.hideSelectors);
	hideSelectors();
</script>